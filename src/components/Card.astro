---
import { getCollection } from 'astro:content'
import GaugeIcon from '../vectors/icons/GaugeIcon.astro';
import LightbulbIcon from '../vectors/icons/LightbulbIcon.astro';
import MicroscopeIcon from '../vectors/icons/MicroscopeIcon.astro';

const { number } = Astro.props;
const numberInt = parseInt(number);

const cards = await getCollection('card');
const card = cards[numberInt - 1];

let Icon;

switch (numberInt) {
    case 1:
        Icon = GaugeIcon;
        break;
    case 2:
        Icon = LightbulbIcon;
        break;
    case 3:
        Icon = MicroscopeIcon;
        break;
    default:
        throw Error("Card Error");
}

---

<div class="card">
	<div class="icon-wrapper">
		<Icon width={"100%"} height={"100%"} color={"var(--color-1)"}/>
	</div>
    <h1>{card.data.title}</h1>
    <div class="content-wrapper">
        <p>{card.data.content}</p>
    </div>
</div>

<style>

    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: start;
        width: 20rem;
        height: 20rem;
        border-radius: 20px;
        background-color: var(--bg-color);
        padding: 10% 0 14% 0;
        color: var(--color-white);
		gap: 0.3rem;
    }

    h1 {
		margin: 0 0 4px 0;
        font-family: 'Roboto';
        font-size: 1.125rem;
    }

    p {
        font-family: 'IBM';
        font-size: 0.875rem;
        text-align: center;
        margin: 0 10% 0 10%;
    }

	.icon-wrapper {
		width: 23%;
	}

	@media (min-width: 1550px) {
		.card {
			width: 22rem;
			height: 22rem;
		}

		h1 {
			font-size: 1.2rem;
		}

		p {
			font-size: 1rem;
		}
	}

	@media (min-width: 1700px) {
		.card {
			width: 24rem;
			height: 24rem;
		}

		h1 {
			font-size: 1.35rem;
		}

		p {
			font-size: 1.05rem;
		}
	}

	@media (min-width: 1880px) {
		.card {
			width: 26rem;
			height: 26rem;
			border-radius: 32px;
		}

		h1 {
			font-size: 1.5rem;
		}

		p {
			font-size: 1.125rem;
		}
	}

    @media (max-width: 1329px) {
        .card {
            width: 16rem;
            height: 16rem;
        }

		h1 {
			font-size: 0.9rem;
		}

        p {
            font-size: 0.7rem;
        }
    }

    @media (max-width: 1173px) {
        .card {
            width: 20rem;
            height: 20rem;
        }

		h1 {
			font-size: 1.125rem;
		}

        p {
            font-size: 0.875rem;
        }
    }

	@media (max-width: 379px) {
		.card {
			width: 16rem;
			height: 16rem;
		}	

		h1 {
			font-size: 0.9rem;
		}

		p {
			font-size: 0.7rem;	
		}

	}

</style>
