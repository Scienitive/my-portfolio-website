---
import Card from "../components/Card.astro";
import Divider1 from "../vectors/dividers/Divider1.astro";
import Divider2 from "../vectors/dividers/Divider2.astro";
---

<section>
	<Divider1 color="var(--bg-color)"/>
    <div class="card-container">
        <div class="card-wrapper">
            <Card number="1"/>
        </div>
        <div class="card-wrapper">
            <Card number="2"/>
        </div>
        <div class="card-wrapper">
            <Card number="3"/>
        </div>
    </div>
	<Divider2 color="var(--bg-color)"/>
</section>

<style>

    section {
		position: relative;
		background-color: var(--bg-dark);
    }

    .card-container {
        display: flex;
        margin: 0 12% 0 12%;
        padding-bottom: 1rem;
        height: 38.5vw;
        justify-content: space-between;
        align-items: center;
    }

    .card-wrapper:nth-child(3) {
        margin-top: 2.5rem;
    }

    .card-wrapper:nth-child(2) {
        margin-top: 7.5rem;
    }

    .card-wrapper:nth-child(1) {
        margin-bottom: 2.5rem;
    }

	@media (min-width: 1440px) {
		.card-container {
			max-width: 1094.410px;
			height: 538.398px;
			margin: auto;
		}
	}

	@media (min-width: 1600px) {
		.card-wrapper:nth-child(3) {
			margin-top: 3.5rem;
		}

		.card-wrapper:nth-child(2) {
			margin-top: 8.5rem;
		}

		.card-wrapper:nth-child(1) {
			margin-bottom: 1.5rem;
		}
	}

    @media (max-width: 1329px) {
        .card-wrapper:nth-child(1) {
            margin-bottom: 2rem;
        }

        .card-wrapper:nth-child(2) {
            margin-top: 6rem;
        }

        .card-wrapper:nth-child(3) {
            margin-top: 2rem;
        }
    }

    @media (max-width: 1173px) {
        .card-wrapper:nth-child(1) {
            margin: 0;
        }

        .card-wrapper:nth-child(2) {
            margin: 0;
        }

        .card-wrapper:nth-child(3) {
            margin: 0;
        }

		.card-container {
			flex-direction: column;
			height: auto;
			padding: 8rem 0 5rem 0;
			gap: 3rem;
		}
    }

	@media (max-width: 599px) {
		.card-container {
			padding: 8rem 0 8rem 0;
		}
	}

</style>
