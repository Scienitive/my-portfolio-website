---
import Card from "../components/Card.astro";
---

<div class="main-container">
    <div class="card-container">
        <div class="card-wrapper">
            <Card number="1"/>
        </div>
        <div class="card-wrapper">
            <Card number="2"/>
        </div>
        <div class="card-wrapper">
            <Card number="3"/>
        </div>
    </div>
</div>

<style>

    .main-container {
        position: relative;
        background-image: url("/vectors/CardBackground.svg");
        background-size: contain;
        background-repeat: no-repeat;
    }

    .background {
        width: 100%;
        position: absolute;
    }

    .card-container {
        display: flex;
        margin: 0 12% 0 12%;
        padding-bottom: 1rem;
        height: 38.5vw;
        justify-content: space-between;
        align-items: center;
    }

    .card-wrapper:nth-child(1) {
        margin-bottom: 5rem;
    }

    .card-wrapper:nth-child(3) {
        margin-top: 5rem;
    }

    @media (max-width: 1199px) {
        .main-container {
            background-image: none;
            background-color: var(--bg-dark);
            margin: 2rem 0;

        }

        .card-container {
            margin: 0;
            height: auto;
            flex-direction: column;
            justify-content: center;
            padding: 2rem 0;
            gap: 2rem;
        }

        .card-wrapper:nth-child(1) {
            margin-bottom: 0;
        }

        .card-wrapper:nth-child(3) {
            margin-top: 0;
        }
    }

    @media (max-width: 549;) {
        
    }

</style>