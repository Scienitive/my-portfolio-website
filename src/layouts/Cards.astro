---
import Card from "../components/Card.astro";
import Divider1 from "../vectors/dividers/Divider1.astro";
import Divider2 from "../vectors/dividers/Divider2.astro";
---

<div class="main-container">
	<Divider1 color="var(--bg-color)"/>
    <div class="card-container">
        <div class="card-wrapper">
            <Card number="1"/>
        </div>
        <div class="card-wrapper">
            <Card number="2"/>
        </div>
        <div class="card-wrapper">
            <Card number="3"/>
        </div>
    </div>
	<Divider2 color="var(--bg-color)"/>
</div>

<style>

    .main-container {
		position: relative;
		background-color: var(--bg-dark);
    }

    .card-container {
        display: flex;
        margin: 0 12% 0 12%;
        padding-bottom: 1rem;
        height: 38.5vw;
        justify-content: space-between;
        align-items: center;
    }

    .card-wrapper:nth-child(3) {
        margin-top: 2.5rem;
    }

    .card-wrapper:nth-child(2) {
        margin-top: 7.5rem;
    }

    .card-wrapper:nth-child(1) {
        margin-bottom: 2.5rem;
    }

    @media (max-width: 1199px) {
        .main-container {
            background-image: none;
            background-color: var(--bg-dark);
            margin: 2rem 0;

        }

        .card-container {
            margin: 0;
            height: auto;
            flex-direction: column;
            justify-content: center;
            padding: 2rem 0;
            gap: 2rem;
        }

        .card-wrapper:nth-child(1) {
            margin-bottom: 0;
        }

        .card-wrapper:nth-child(3) {
            margin-top: 0;
        }
    }

    @media (max-width: 549;) {
        
    }

</style>
